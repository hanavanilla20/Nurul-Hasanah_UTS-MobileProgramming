<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUtama">

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:text="HOME"
        android:backgroundTint="@color/blueme"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/buttonBerita"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:text="BERITA"
        android:backgroundTint="@color/blueme"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:text="PROFILE"
        android:backgroundTint="@color/blueme"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.150"
        app:layout_constraintHorizontal_bias="0.150"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ini merupakan aplikasi pendataan alumni Politeknik Negeri Jakarta. Aplikasi ini dibuat dengan desain yang simpel dan mudah dimengerti oleh pengguna saat pengguna pertama kali membukanya."
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>